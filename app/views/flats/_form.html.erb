<div class="container">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name, :label => 'Apartment name' %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :url, :label => 'Picture url' %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.submit class: 'btn btn-primary form-submit-btn'%>
  <% end %>
</div>
